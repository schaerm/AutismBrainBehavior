@Article{pmid29701857,
   Author="Franchini, M.  and Zöller, D.  and Gentaz, E.  and Glaser, B.  and Wood de Wilde, H.  and Kojovic, N.  and Eliez, S.  and Schaer, M. ",
   Title="{{E}arly {A}daptive {F}unctioning {T}rajectories in {P}reschoolers {W}ith {A}utism {S}pectrum {D}isorders}",
   Journal="J Pediatr Psychol",
